<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head') %>
</head>
<body>
    <header>
        <%-include('./partials/header') %>
    </header>
    <main>
        <h1>CATALOGO PRODUCTOS</h1>
        
        <div class="buscador">
            <p>Encontr√° tu producto</p>
            <div class="form">
                <input type="text">
                <button>Buscar</button>
            </div>
        </div>
        <ul class="catalogo">
            <% products.forEach(function(product) { %>
                <li>
                    <div class="card" id="user-<%=product.id %>">
                        <div class="container">
                            <i class="bi bi-chevron-left"></i>
                            <img src="<%= product.imagen %>" alt="Image 1" class="img_Cards">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                        <div class="text-grey">
                            <%= product.categoria %>
                        </div>
                        <div class="text-black">
                            <%= product.nombre %>
                        </div>
                        <div class="text-red">
                            PRECIO $ <%= product.precio.toLocaleString('es-AR') %>
                        </div>
                        <div class="botones">
                            <button onclick="location.href='/cart/<%=product.id %>'">
                                <span class="material-symbols-outlined">shopping_cart</span>
                            </button>
                            <button onclick="location.href='/detail_Product/<%=product.id %>'"><span>Ver Detalle</span></button>
                        </div>
                  </div>
                </li>
            <% }); %>
        </ul>
    </main>
    <footer>
        <%-include('./partials/footer') %>
    </footer>
</body>
</html>